<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=0.8">
        <title>Setlister</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/semantic/dist/semantic.min.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    </head>
<body>
    <div class="ui vertical container inverted sidebar menu" id="sidebarMenu">
        <div class="header item">Setlister</div>
        <a class="item" href="/">Home</a>
        <a class="item" href="/songs/new">Add a Song</a>
    </div>
    <div class="ui vertical container inverted wide right sidebar" id="sidebarPlaylist">
        <div class="header item">Playlist</div>
        <div class="ui grid item" id="playingNow">
            <iframe class="ui attached" src="https://open.spotify.com/embed?uri=spotify:track:2JB7PvDV0R3Vwbq0iy1WPe" width="100%" height="80" frameborder="0" allowtransparency="true"></iframe>
        </div>
        <div id="rateButtons">
            <div class="ui buttons">
                <button class="fluid ui red button">Next</button>
                <div class="or"></div>
                <button class="fluid ui green button">Approve</button>
            </div>
        </div>
        <h3>Up Next:</h3>
        <ol id="playlistUpNext">
        <% for(var i=0;i<15;i++){ %>
            <li><strong>Billy</strong> - Mama Mia</li>
        <% } %>
        </ol>
    </div>
    <div class="ui huge inverted fixed menu">
        <div class='ui container'>
            <a class="item" id="sidebarToggler">
                <i class="sidebar icon"></i>Menu
            </a>
            <a class="item" id="playlistToggler">
                <i class="music icon"></i>Playlist
            </a>
        </div>
    </div>
    <div class="ui container pusher" id="mainContent">